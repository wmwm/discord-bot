# AWS SDK
gem 'aws-sdk-ec2', '~> 1.0'

# AI/LLM integration
gem 'ruby-openai', '~> 6.3'

# HTTP requests and web scraping
gem 'httparty', '~> 0.21'

# Background jobs and scheduling
gem 'sidekiq', '~> 7.2'
gem 'sidekiq-cron', '~> 1.12'

# Configuration and environment
gem 'dotenv', '~> 2.8'

# Logging
gem 'logger', '~> 1.6'

# Time zone handling
gem 'tzinfo', '~> 2.0'

# JSON handling
gem 'json', '~> 2.7'
gem 'rexml', '~> 3.2'

# Development and testing
group :development, :test do
  gem 'rspec', '~> 3.12'
  gem 'pry', '~> 0.14'
